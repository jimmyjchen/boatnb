<div class="layout-form-page">
  <div class="intro">
    <h1>WELCOME TO BOATNB</h1>
    <h2>To get started, create an account on Boatnb</h2>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3">
      <div class="boat-form">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.label :avatar do %>
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
            <% end %>
          </div>

          <div class="form-actions">
            <div>
              <%= f.button :submit, "Create Account", class:"btn btn-create-account" %>
            </div>
          </div>
        <% end %>

        <p class="link-btn-create-account"><%= render "devise/shared/links" %></p>
      </div>
    </div>
  </div>
</div>




