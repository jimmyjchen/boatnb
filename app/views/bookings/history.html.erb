<div class="booking-page">
  <div class="card-category">
    <h1 class="booking-title" style="margin-top: 24px;">Reservation Center</h1>
  </div>

  <div class="container justify-content-center">
    <h5 class="booking-subtitle">Upcoming reservations</h5>
    <% @bookings.each do |b| %>
      <div class="d-flex justify-content-left py-3">
        <img class="booking-card-img" src="<%= b.boat.photo %>" alt="Card image cap">
        <div class="d-flex">
          <div class="boat-title-b">
            <p class="booking-boat-title" style="font-weight: bold"><%= b.boat.title %></p>
            <p>Starting date: <%= b.date_start.strftime("%A %B %e %Y") %></p>
            <p>Returning date: <%=b.date_end.strftime("%A %B %e %Y") %></p>
             Renting days: <%= day = (Date.parse(b.date_end.to_s) - Date.parse(b.date_start.to_s)).round %></p>
          </div>
          <div class="boat-owner-b" style="text-align: center">
            <p> Boat owner: <%= b.boat.user.first_name %><%= b.boat.user.last_name %></p>
            <img src="<%= b.boat.user.avatar.url(:bright_face) %>" class="avatar-booking">
          </div>

          <div class="boat-price-b" style="text-align: center">
            <!-- <div class="dropdown show">
              <a class="btn btn-secondary dropdown-toggle" href="https://example.com" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Currency
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Another action</a>
                <a class="dropdown-item" href="#">Something else here</a>
              </div> -->
            <p> Full Price: <%= number_to_currency(b.boat.price*day, :unit => "$") %> </p>
          </div>
        </div>
      </div>
    <% end %>
    <h5 class="booking-subtitle"> Past Reservations</h5>
  </div>
</div>


