<h2 class="booking-title" style="margin-top: 24px;">Reservation Center</h2>
<p class="booking-title">Upcoming reservations</p>

<div class="container justify-content-center">
  <% @bookings.each do |b| %>
    <div class="d-flex justify-content-left py-3">
      <img class="booking-card-img" src="https://images.unsplash.com/photo-1511804472014-fa7b871cd6a9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="Card image cap">
      <div class="booking-card">
        <div>
          <%= b.boat.title %>
        </div>
        <%= b.date_start.strftime("%A %B %e %Y") %>
        <%= b.date_end.strftime("%A %B %e %Y") %>
        <%= day = (Date.parse(b.date_end.to_s) - Date.parse(b.date_start.to_s)).round %>
        <%= b.boat.price*day %>
        <%= b.boat.user.first_name %><%= b.boat.user.last_name %>
      </div>
    </div>
  <% end %>
</div>




