<div class="container">
  <div class="pt-5 form-wrapper" style="width: 50%;margin: 0 auto;">
    <div>
      <%= cl_image_tag(@boat.photo, crop: :fill) %>
    </div>
    <h3 class="text-center text-dark pb-4">Request Boat Booking</h3>
      <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :start_date, as: :string, label: 'Requested Start Date', required: true, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, label: 'Requested End Date', required: true, input_html: {class: "datepicker"} %>
      <div class="text-center pt-2">
        <%= f.button :submit, "Request Booking", class: "btn btn-secondary btn-md"%>
      </div>
    <% end %>
  </div>
</div>


