
<div class="layout-book-boat">
  <div class="intro">
    <h1>Request Boat Booking</h1>
  </div>
  <div class="row">
    <div class="col-xs-9 col-sm-4 offset-sm-4">
      <div class="boat-form">
        <%= simple_form_for [@boat, @booking] do |f| %>
        <%= f.input :date_start, discard_hour: true %>
        <%= f.input :date_end, discard_hour: true %>
        <%= f.button :submit, "Create Booking", class:"btn btn-create-account" %>
        <% end -%>
      </div>
    </div>
  </div>
</div>

